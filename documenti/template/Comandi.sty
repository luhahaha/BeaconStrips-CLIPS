%-------------------------
%        TABELLE
\usepackage{colortbl}
\newenvironment{tabella}[1]
{
	\def\arraystretch{1.5}
	\rowcolors{2}{dispari}{pari}
	\begin{longtable}{#1}
	\rowcolor{intestazione}
	\arrayrulecolor{linecolor}
}{
	\end{longtable}
}

% LINEE VERTICALI
\newcommand\VRule[1][\arrayrulewidth]{\color{linecolor} \vrule width 1pt}

% INTESTAZIONI
\newcommand{\intestazionetwocol}[2]
{\rowcolor{intestazione}
\color{intestazione_txt}\textbf{#1} & \color{intestazione_txt}\textbf{#2}\\
\endfirsthead
\rowcolor{intestazione}
\color{intestazione_txt}\textbf{#1} & \color{intestazione_txt}\textbf{#2}\\
\endhead
\hline}

\newcommand{\intestazionethreecol}[3]
{\rowcolor{intestazione}
\color{intestazione_txt}\textbf{#1} & \color{intestazione_txt}\textbf{#2} & \color{intestazione_txt}\textbf{#3}\\
\endfirsthead
\rowcolor{intestazione}
\color{intestazione_txt}\textbf{#1} & \color{intestazione_txt}\textbf{#2} & \color{intestazione_txt}\textbf{#3}\\
\endhead
\hline}

\newcommand{\intestazionefourcol}[4]
{\rowcolor{intestazione}
\color{intestazione_txt}\textbf{#1} & \color{intestazione_txt}\textbf{#2} & \color{intestazione_txt}\textbf{#3} & \color{intestazione_txt}\textbf{#4}\\
\endfirsthead
\rowcolor{intestazione}
\color{intestazione_txt}\textbf{#1} & \color{intestazione_txt}\textbf{#2} & \color{intestazione_txt}\textbf{#3} & \color{intestazione_txt}\textbf{#4}\\
\endhead
\hline}

\newcommand{\intestazionefivecol}[5]
{\rowcolor{intestazione}
\color{intestazione_txt}\textbf{#1} & \color{intestazione_txt}\textbf{#2} & \color{intestazione_txt}\textbf{#3} & \color{intestazione_txt}\textbf{#4} & \color{intestazione_txt}\textbf{#5}\\
\endfirsthead
\rowcolor{intestazione}
\color{intestazione_txt}\textbf{#1} & \color{intestazione_txt}\textbf{#2} & \color{intestazione_txt}\textbf{#3} & \color{intestazione_txt}\textbf{#4} & \color{intestazione_txt}\textbf{#5}\\
\endhead
\hline}

%-------------------------
%         DIARIO
\newenvironment{diario}
{
	\setcounter{table}{-1}
	\section*{Diario delle modifiche}
	\begin{tabella}{!{\VRule}l!{\VRule}p{4.5cm}!{\VRule}l!{\VRule}l!{\VRule}l!{\VRule}}
	\intestazionefivecol{Versione}{Riepilogo}{Autore}{Ruolo}{Data}
}{
	\end{tabella}
}

% Entry modifiche
% sintassi: \modifica{Autore}{Ruolo}{Riepilogo}{Data}{Versione}
\newcommand{\modifica}[5]{#5 & #3 & #1 & #2 & #4\\}
