%         DIARIO
\newcommand\VRule[1][\arrayrulewidth]{\color{white} \vrule width 1pt}
\newenvironment{diario}
{
	\setcounter{table}{-1}
	\section*{Diario delle modifiche}
	\def\arraystretch{1.5}
	\rowcolors{2}{dispari}{pari}
	\begin{longtable}{l!{\VRule}p{4.5cm}!{\VRule}l!{\VRule}l!{\VRule}l}
	\rowcolor{intestazione}
	\color{intestazione_txt} \textbf{Versione} & \color{intestazione_txt} \textbf{Riepilogo} & \color{intestazione_txt} \textbf{Autore} & \color{intestazione_txt} \textbf{Ruolo} & \color{intestazione_txt} \textbf{Data} \\
	\endfirsthead
	\rowcolor{intestazione}
	\color{intestazione_txt} \textbf{Versione} & \color{intestazione_txt} \textbf{Riepilogo} & \color{intestazione_txt} \textbf{Autore} & \color{intestazione_txt} \textbf{Ruolo} & \color{intestazione_txt} \textbf{Data} \\
	\endhead
}{
	\end{longtable}
}

