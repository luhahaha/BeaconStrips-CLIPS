<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="beaconstrips.clips.client.viewcontroller.authentication.AccountActivity">

    <TextView
        style="@style/TextViewTitolo"
        android:text="Il tuo profilo"
        android:id="@+id/account_label"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/email_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_mail_outline_black_24dp"
        android:layout_alignTop="@+id/account_email"
        android:layout_alignParentStart="true" />

    <TextView
        style="@style/TextViewBase"
        android:text=""
        android:layout_toRightOf="@id/email_img"
        android:id="@+id/account_email"
        android:padding="0dp"
        android:layout_marginLeft="16dp"
        android:layout_height="24dp"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/account_username" />

    <ImageView
        android:id="@+id/username_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_person_black_24dp"
        android:layout_below="@+id/account_label"
        android:layout_alignParentStart="true" />

    <TextView
        style="@style/TextViewBase"
        android:text=""
        android:id="@+id/account_username"
        android:padding="0dp"
        android:layout_height="24dp"
        android:layout_below="@+id/account_label"
        android:layout_alignStart="@+id/account_email" />
    <!-- da aggiungere altre textview per le altre info -->

    <Button
        style="@style/RaisedButton"
        android:id="@+id/changeInformation_button"
        android:text="Cambia le tue credenziali"
        android:layout_below="@id/account_email"
        android:layout_centerHorizontal="true"
        />

    <Button
        style="@style/RaisedButton"
        android:text="Visualizza i tuoi risultati"
        android:id="@+id/results_button"
        android:layout_marginLeft="16dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/changeInformation_button"
        />

</RelativeLayout>
