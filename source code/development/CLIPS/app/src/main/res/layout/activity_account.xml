<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="beaconstrips.clips.client.viewcontroller.authentication.AccountActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            style="@style/TextViewTitolo"
            android:text="@string/account_label"
            android:id="@+id/account_label"
            android:layout_gravity="center_horizontal"/>

        <TextView
            style="@style/TextViewBase"
            android:text="@string/logged_email"
            android:id="@+id/account_email"
            android:layout_gravity="center_horizontal"/>
        <!-- da aggiungere altre textview per le altre info -->

        <Button
            style="@style/RaisedButton"
            android:id="@+id/changeInformation_button"
            android:text="Cambia le tue credenziali"
            android:layout_gravity="center_horizontal"
            />

        <Button
            style="@style/RaisedButton"
            android:text="Visulalizza i tuoi risultati"
            android:id="@+id/results_button"
            android:layout_gravity="center_horizontal"
            />

    </LinearLayout>

</RelativeLayout>
