<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView"
        tools:context="beaconstrips.clips.client.viewcontroller.savedresults.ResultActivity">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical">

    <TextView
        style="@style/TextViewTitolo"
        android:text="Percorso"
        android:id="@+id/namePathLabel"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:id="@+id/pathDate"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/nameLabel">

        <TextView
            android:id="@+id/dateLabel"
            style="@style/TextViewBase"
            android:text="@string/path_date_label"
            android:layout_gravity="left"
            android:textColor="@color/colorText"/>

        <TextView
            android:id="@+id/date"
            style="@style/TextViewBase"
            android:text="jhgfdss"
            android:layout_gravity="right"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/pathBuilding"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/nameLabel" >

        <TextView
            android:id="@+id/buildingLabel"
            style="@style/TextViewBase"
            android:text="@string/path_building_label"
            android:layout_gravity="left"
            android:textColor="@color/colorText"/>

        <TextView
            android:id="@+id/building"
            style="@style/TextViewBase"
            android:layout_gravity="right" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pathTotalTime"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/nameLabel" >

        <TextView
            android:id="@+id/totalPathTimeLabel"
            style="@style/TextViewBase"
            android:text="@string/path_total_time_label"
            android:layout_gravity="left"
            android:textColor="@color/colorText"/>

        <TextView
            android:id="@+id/totalPathTime"
            style="@style/TextViewBase"
            android:layout_height="wrap_content"
            android:layout_gravity="right" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pathTotalTimeProofs"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/nameLabel" >

        <TextView
            style="@style/TextViewBase"
            android:textColor="@color/colorText"
            android:layout_weight="1"
            android:text="@string/path_total_time_proofs_label"
            android:layout_gravity="left"/>

        <TextView
            android:id="@+id/totalTimeProofs"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="right" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pathTotalScore"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/nameLabel" >

        <TextView
            android:id="@+id/totalScoreLabel"
            style="@style/TextViewBase"
            android:text="@string/path_total_score_label"
            android:layout_gravity="left"
            android:textColor="@color/colorText"/>

        <TextView
            android:id="@+id/totalScore"
            style="@style/TextViewBase"
            android:layout_gravity="right" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pathMinScoreProof"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/nameLabel" >

        <TextView
            android:id="@+id/minScoreProofLabel"
            style="@style/TextViewBase"
            android:text="@string/path_min_score_proof_label"
            android:layout_gravity="left"
            android:textColor="@color/colorText"/>

        <TextView
            android:id="@+id/minScoreProof"
            style="@style/TextViewBase"
            android:layout_gravity="right" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pathMaxScoreProof"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/nameLabel" >

        <TextView
            android:id="@+id/maxScoreProofLabel"
            style="@style/TextViewBase"
            android:text="@string/path_max_score_proof_label"
            android:layout_gravity="left"
            android:textColor="@color/colorText"/>

        <TextView
            android:id="@+id/maxScoreProof"
            style="@style/TextViewBase"
            android:layout_height="wrap_content"
            android:layout_gravity="right" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pathRankingPosition"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/nameLabel" >

        <TextView
            android:id="@+id/rankingPositionLabel"
            style="@style/TextViewBase"
            android:text="@string/path_ranking_position_label"
            android:layout_gravity="left"
            android:textColor="@color/colorText"/>

        <TextView
            android:id="@+id/rankingPosition"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="right" />
    </LinearLayout>

    <Button
        style="@style/RaisedButton"
        android:text="@string/ranking_button"
        android:id="@+id/rankingButton"
        android:layout_gravity="center_horizontal" />

    <Button
        style="@style/RaisedButton"
        android:text="@string/proofs_button"
        android:id="@+id/proofsButton"
        android:layout_gravity="center_horizontal" />

    <Button
        style="@style/RaisedButton"
        android:text="@string/save_result_button"
        android:id="@+id/saveResult"
        android:layout_gravity="center_horizontal" />

    </LinearLayout>

</ScrollView>

