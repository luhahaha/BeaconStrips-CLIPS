<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="beaconstrips.clips.client.viewcontroller.games.SearchNewStepActivity">


    <TextView
        style="@style/TextViewTitolo"
        android:text="Vai verso la prossima prova"
        android:id="@+id/descriptionLabel"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="107dp"/>

    <TextView
        style="@style/TextViewBase"
        android:text="È più vicina di quanto tu possa immaginare"
        android:id="@+id/hintLabel"
        android:layout_below="@+id/descriptionLabel"
        android:layout_centerHorizontal="true" />

    <Button
        style="@style/RaisedButton"
        android:text="Inizia test"
        android:id="@+id/startTestButton"
        android:visibility="visible"
        android:layout_above="@+id/showHint"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mostra suggerimento"
        android:id="@+id/showHint"
        style="@style/RaisedButton"
        android:layout_marginBottom="36dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/proximityLabel"
        android:textAlignment="center"
        android:layout_above="@+id/startTestButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"/>
</RelativeLayout>
