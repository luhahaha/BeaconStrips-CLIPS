<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="beaconstrips.clips.client.viewcontroller.games.MultipleChoiceQuizActivity">

    <include layout="@layout/activity_quiz"
        android:id="@+id/include2" />

    <Button
        style="@style/RaisedButton"
        android:id="@+id/choice1"
        android:text="1100"
        android:layout_below="@+id/include2"
        android:layout_centerHorizontal="true"
        />

    <Button
        style="@style/RaisedButton"
        android:text="1000"
        android:id="@+id/choice2"
        android:layout_below="@+id/choice1"
        android:layout_centerHorizontal="true" />

    <Button
        style="@style/RaisedButton"
        android:text="1101"
        android:id="@+id/choice3"
        android:layout_below="@+id/choice2"
        android:layout_alignStart="@+id/choice2" />

    <Button
        style="@style/RaisedButton"
        android:text="1010"
        android:id="@+id/choice4"
        android:layout_below="@+id/choice3"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
