<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        style="@style/TextViewTitolo"
        android:text="Tappa"
        android:id="@+id/namePathLabel"/>

    <LinearLayout
        android:id="@+id/buildAndData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/namePathLabel">

        <TextView
            style="@style/TextViewBase"
            android:text="Edificio:"
            android:id="@+id/buildingLabel"
            android:textColor="@color/colorText"
            android:layout_weight="0.25"/>
        <TextView
            android:id="@+id/building"
            style="@style/TextViewBase"
            android:text="jhgfdsshgfd"
            android:layout_weight="0.25"/>

        <TextView
            style="@style/TextViewBase"
            android:text="Data:"
            android:id="@+id/dateLabel"
            android:textColor="@color/colorText"
            android:layout_weight="0.25"/>

        <TextView
            android:id="@+id/date"
            style="@style/TextViewBase"
            android:text="jhgfdsshgfd"
            android:layout_weight="0.25"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buildAndData">

        <TextView
            style="@style/TextViewBase"
            android:text="@string/path_total_time_label"
            android:id="@+id/totalPathTimeLabel"
            android:textColor="@color/colorText"
            android:layout_weight="0.25"/>

        <TextView
            style="@style/TextViewBase"
            android:id="@+id/totalPathTime"
            android:text="hcvbn"
            android:layout_weight="0.25"/>

        <TextView
            style="@style/TextViewBase"
            android:textColor="@color/colorText"
            android:text="@string/path_total_score_label"
            android:id="@+id/totalScoreLabel"
            android:layout_weight="0.25"/>
        <TextView
            style="@style/TextViewBase"
            android:id="@+id/totalScore"
            android:text="hgfdss"
            android:layout_weight="0.25"/>

    </LinearLayout>



</RelativeLayout>