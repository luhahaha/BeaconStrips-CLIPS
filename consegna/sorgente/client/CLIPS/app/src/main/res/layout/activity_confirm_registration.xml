<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/registration_ok_label"
        android:id="@+id/registration_ok_label"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="72dp"
        android:layout_gravity="center_horizontal" />

    <TextView
        style="@style/TextViewBase"
        android:text="email schermata precedente"
        android:id="@+id/email_text"
        android:layout_gravity="center_horizontal" />

    <TextView
        style="@style/TextViewBase"
        android:text="pwd shcermata precedente"
        android:layout_gravity="center_horizontal"
        android:id="@+id/password_text"/>

    <Button
        style="@style/RaisedButton"
        android:id="@+id/link_login_button"
        android:text="@string/go_to_profile"
        android:layout_gravity="center_horizontal"/>
</LinearLayout>