<?xml version="1.0" encoding="utf-8"?>
    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:rowCount="9"
        android:columnCount="3"
        android:layout_alignParentStart="true"
        android:id="@+id/gridLayout">

        <CheckBox
            style="@style/TextViewBase"
            android:text="@string/search"
            android:layout_row="0"
            android:layout_column="0"
            android:id="@+id/checkRadius"
            android:layout_columnSpan="3" />

        <TextView
            style="@style/TextViewTitolo"
            android:text="Distanza (in km): "
            android:id="@+id/distanceLabel"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_marginLeft="@dimen/abc_action_bar_content_inset_material"
            android:layout_marginTop="@dimen/abc_action_bar_content_inset_material" />

        <TextView
            style="@style/TextViewBase"
            android:text=""
            android:id="@+id/distanceKmText"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_marginLeft="@dimen/abc_action_bar_content_inset_material"
            android:layout_marginTop="@dimen/abc_action_bar_content_inset_material"/>

        <SeekBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/kmFilter"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_gravity="fill_horizontal"
            android:progress="20"
            android:max="100"
            android:layout_columnSpan="3"
            android:layout_marginBottom="@dimen/abc_action_bar_content_inset_material" />

    <Button
        style="@style/RaisedButton"
        android:id="@+id/searchBuilding"
        android:text="cerca edifici nel raggio selezionato"
        android:layout_marginTop="@dimen/abc_action_bar_content_inset_material"
        android:layout_gravity="center_horizontal"
        android:layout_row="8"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:layout_height="fill_parent"
        android:clickable="false"
        android:layout_marginBottom="@dimen/abc_action_bar_content_inset_material" />
</GridLayout>